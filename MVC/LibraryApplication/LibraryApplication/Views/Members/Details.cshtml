@model LibraryApplication.Models.Member

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Member</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MemberNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MemberNumber)
        </dd>
        <dd>
            <strong>Books for this member:</strong>
        </dd>
        <dd>
            <ul>
                @foreach (var item in Model.Books)
                {
                    <li><a href="/Books/Details/@item.Id">@item.Title</a></li>
                }
            </ul>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Add Book", "AddBook", new { id = Model.Id }) |
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
