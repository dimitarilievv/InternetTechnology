@model IEnumerable<Posledna.Models.TrainingProgram>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (User.IsInRole("Admin")){ 
        @Html.ActionLink("Create New", "Create")
    }

</p>
<table id="tableTraining" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coach.FirstName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Coach.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <img src="@item.ImageUrl" style="max-width:200px" />
                </td>
                <td>
                    @if (User.IsInRole("Admin")){
                        @Html.ActionLink("Edit", "Edit", new { id = item.TrainingProgramId }) 
                        <button data-training-id="@item.TrainingProgramId" class="btn-link js-delete">Delete</button>
                    }
                    @if (User.IsInRole("Athlete") || User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Details", "Details", new { id = item.TrainingProgramId }) 
                    }

                </td>
            </tr>
        }
    </tbody>



</table>
@section scripts{
    <script>
        $(document).ready(function () {
            var table = $("#tableTraining").DataTable();

            $("#tableTraining").on("click", ".js-delete", function () {
                var button = $(this);
                var trainingId = button.attr("data-training-id");
                bootbox.confirm("Do you want to delete?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/TrainingPrograms/Delete/" + trainingId,
                            method: "GET",
                            success: function () {
                               table.row(button.parents("tr")).remove().draw();
                            },
                            error: function (err) {
                                console.log(err);
                            }
                        });
                    }
                });
            });

        });

    </script>    
    
}