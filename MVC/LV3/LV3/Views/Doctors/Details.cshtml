@model LV3.Models.Doctor

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Doctor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Hospital.HospitalName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Hospital.HospitalName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DoctorName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DoctorName)
        </dd>

        <dt>
            Patients for the doctor:
        </dt>
        <ul>
            @foreach (var item in Model.Patients)
            {
                <li>@item.PatientName</li>
            }
        </ul>
        @Html.ActionLink("AddPatientToDoctor", "AddPatientToDoctor", new { id = Model.DoctorId })
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.DoctorId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
