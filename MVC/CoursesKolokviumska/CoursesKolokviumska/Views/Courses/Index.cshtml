@model IEnumerable<CoursesKolokviumska.Models.Course>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="tableCourses" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Teacher Name</th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>

        </tr>
    </thead>
 
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Teacher.Name)
                </td>
                <td>
                    <img src="@item.ImageUrl" style="max-width:150px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    <button data-course-id="@item.Id" class="btn-link js-delete">Delete</button>
                </td>
            </tr>
  
        }

    </tbody>
</table>

@section scripts{

    <script>

        $(document).ready(function () {
            var table = $("#tableCourses").DataTable();

            $("#tableCourses").on("click", ".js-delete", function () {
                var button = $(this);
                var courseId = button.attr("data-course-id");

                bootbox.confirm("Do you want to delete the item?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/Courses/Delete/" + courseId,
                            method: "GET",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            },
                            error: function (err) {
                                console.log(err);
                            }
                        });
                    }
                    else {
                        console.log("Deletion canceled for courseId: " + courseId);
                    }
                });
            });

        });
    </script>


}